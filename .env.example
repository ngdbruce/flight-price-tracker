# Flight Price Tracker - Environment Configuration
# Copy this file to .env and fill in your actual values

# === Database Configuration ===
DATABASE_URL=postgresql://flight_user:flight_password@localhost:5432/flight_tracker

# === Redis Configuration ===  
REDIS_URL=redis://localhost:6379/0

# === Telegram Bot Configuration ===
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# === Flight API Configuration ===
# Register at https://developers.amadeus.com/
AMADEUS_API_KEY=your_amadeus_api_key_here
AMADEUS_API_SECRET=your_amadeus_api_secret_here
AMADEUS_BASE_URL=https://test.api.amadeus.com

# === Application Configuration ===
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your_secret_key_here_change_in_production

# === Performance Configuration ===
API_RATE_LIMIT=100  # requests per minute per IP
PRICE_CHECK_INTERVAL_MINUTES=120  # How often to check prices
MAX_TRACKING_REQUESTS_PER_USER=10
CACHE_TTL_MINUTES=15  # Flight API response caching

# === Notification Configuration ===
PRICE_CHANGE_THRESHOLD_PERCENT=5.0  # Default notification threshold
MAX_NOTIFICATIONS_PER_DAY=50  # Per tracking request
TELEGRAM_API_TIMEOUT=30  # Seconds

# === Security Configuration ===
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# === Monitoring Configuration ===
ENABLE_METRICS=true
METRICS_PORT=9090
SENTRY_DSN=  # Optional: Sentry error tracking

# === Development/Testing ===
# Set to true to use mock flight data instead of real API
USE_MOCK_FLIGHT_DATA=false
PYTEST_TIMEOUT=30